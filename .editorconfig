# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 80
trim_trailing_whitespace = true
# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,json,css,scss,less}]
charset = utf-8

# 4 space indentation
[*.{js,json,css,scss,less}]
indent_style = space
indent_size = 2
