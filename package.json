{
  "name": "fashion-cloud-cc",
  "version": "1.0.0",
  "description": "fashion-cloud-coding-challange",
  "main": "main.js",
  "repository": "https://github.com/anasshaheen/fashion-cloud-cc",
  "author": "Anas Shaheen",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf build && tsc -p tsconfig.build.json",
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register ./index.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node build/index.js\"",
    "start:prod": "yarn build && node build/index.js",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "mongoose": "^5.7.1",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/jest": "^24.0.18",
    "@types/mongoose": "^5.5.17",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.5",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tsc-watch": "^4.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
